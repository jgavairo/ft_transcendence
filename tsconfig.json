{
    "compilerOptions": {
        "target": "ES2016",
        "module": "ES6",
        "lib": ["ES2016", "DOM"],
        "outDir": "./scripts",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["scripts/**/*", "games/pong/pongGame.js", "games/pong/pongGame.ts"],
    "exclude": ["node_modules"]
} 
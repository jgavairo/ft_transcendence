{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2017",
        "lib": ["ES2016", "DOM"],
        "outDir": "./scripts",
        "rootDir": "./scripts",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true
    },
    "include": ["scripts/**/*", "scripts/games/pong/pongGame.ts"],
    "exclude": ["node_modules"]
} 